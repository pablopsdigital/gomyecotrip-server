  "definitions": {
    "User": {
      "required": [
        "_id",
        "firstName",
        "lastName",
        "email",
        "password",
        "imageAvatar",
        "isAdmin",
        "isHosted"
      ],
      "properties": {
        "_id": {
          "type": "string",
          "readOnly": true,
          "uniqueItems": true,
          "example": "614629809a7105580c81b249"
        },
        "firstName": {
          "type": "string",
          "uniqueItems": true,
          "example": "Ceciley"
        },
        "lastName": {
          "type": "string",
          "uniqueItems": true,
          "example": "Ceciley"
        },
        "email": {
          "type": "string",
          "uniqueItems": true,
          "example": "crobrow0@biglobe.ne.jp"
        },
        "password": {
          "type": "string",
          "uniqueItems": true,
          "example": "fsjTNs599evU"
        },
        "imageAvatar": {
          "type": "string",
          "example": "https://dummyimage.com/400x400/"
        },
        "isAdmin": {
          "type": "boolean",
          "example": "false"
        },
        "isHosted": {
          "type": "boolean",
          "example": "true"
        }
      }
    },
    "Experience": {
      "required": [
        "_id",
        "name",
        "description",
        "featuredImage",
        "address",
        "phoneNumber",
        "ratesForPerson",
        "map",
        "reviewStart",
        "reviewCount"
      ],
      "properties": {
        "_id": {
          "type": "string",
          "readOnly": true,
          "uniqueItems": true,
          "example": "614629809a7105580c81b249"
        },
        "name": {
          "type": "string",
          "uniqueItems": true,
          "example": "Iphone X"
        },
        "sale": {
          "type": "boolean",
          "example": "true"
        },
        "price": {
          "type": "number",
          "example": "23.50"
        },
        "photo": {
          "type": "string",
          "example": "iphone.jpg"
        },
        "tags": {
          "type": "string",
          "enum": ["uncategorized", "work", "lifestyle", "motor", "mobile"],
          "example": "work"
        },
        "createdAt": {
          "type": "string",
          "readOnly": true
        }
      }
    },
    "Booking": {
      "required": ["_id", "name", "sale", "price", "tags"],
      "properties": {
        "_id": {
          "type": "string",
          "readOnly": true,
          "uniqueItems": true,
          "example": "614629809a7105580c81b249"
        },
        "name": {
          "type": "string",
          "uniqueItems": true,
          "example": "Iphone X"
        },
        "sale": {
          "type": "boolean",
          "example": "true"
        },
        "price": {
          "type": "number",
          "example": "23.50"
        },
        "photo": {
          "type": "string",
          "example": "iphone.jpg"
        },
        "tags": {
          "type": "string",
          "enum": ["uncategorized", "work", "lifestyle", "motor", "mobile"],
          "example": "work"
        },
        "createdAt": {
          "type": "string",
          "readOnly": true
        }
      }
    }
